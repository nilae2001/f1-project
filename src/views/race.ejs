        </div>

        <div class="details">
            <h3>Location:</h3><p>
                <%= finalRace.Circuit.Location.locality %>, <%= finalRace.Circuit.Location.country %>
            </p>
            <h3>Circuit:</h3><p><%= finalRace.Circuit.circuitName %></p>
            <h3>Season:</h3><p><%= finalRace.season %></p>
            <h3>Round:</h3><p><%= finalRace.round %></p>
            <h3>Date:</h3><p><%= finalRace.date%> </p>
            <h3>Time:</h3><p><%= finalRace.time%> </p>
        </div>

        <div class="practices">
            <h2>Practices</h2>
            <h3>First Practice:</h3><p><%= finalRace.FirstPractice.date%> <%= finalRace.FirstPractice.time%></p>
            <% if (finalRace.SecondPractice) { %>
                <h3>Second Practice:</h3>
                <p>
                  <%= finalRace.SecondPractice.date %> <%= finalRace.SecondPractice.time %>
                </p>
              <% } %>
              
              <% if (finalRace.ThirdPractice) { %>
                <h3>Third Practice:</h3>
                <p>
                  <%= finalRace.ThirdPractice.date %> <%= finalRace.ThirdPractice.time %>
                </p>
              <% } %>

              <% if (finalRace.Sprint) { %>
                <h3>Sprint:</h3>
                <p>
                  <%= finalRace.Sprint.date %> <%= finalRace.Sprint.time %>
                </p>
              <% } %>
        </div>

        <div class="infoRace">
          <h3><%= page.title %></h3>
          <% page.extract.split('\n').forEach((paragraph) => { %>
            <p><%= paragraph.trim() %></p>
          <% }) %>
          <a href="<%= finalRace.url %>">via Wikipedia.</a>
        </div>
